<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="20dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/custom_search_button"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_link"
                android:layout_marginStart="12dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLinkName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/figtree_medium"
                android:gravity="center|start"
                android:text="Smart Link Name"
                android:textColor="@color/txt_black_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/tvDate"
                app:layout_constraintEnd_toStartOf="@+id/tvClicks"
                app:layout_constraintStart_toEndOf="@+id/ivProfile"
                app:layout_constraintTop_toTopOf="@+id/ivProfile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/figtree_medium"
                android:gravity="center|start"
                android:text="22 Aug 2023"
                android:textColor="@color/txt_gray_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
                app:layout_constraintEnd_toStartOf="@+id/tvClicks"
                app:layout_constraintStart_toStartOf="@+id/tvLinkName"
                app:layout_constraintTop_toBottomOf="@+id/tvLinkName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClickCount"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/figtree_bold"
                android:gravity="center"
                android:text="22"
                android:textColor="@color/txt_black_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/tvDate"
                app:layout_constraintEnd_toEndOf="@id/tvClicks"
                app:layout_constraintStart_toEndOf="@+id/tvDate"
                app:layout_constraintTop_toTopOf="@+id/ivProfile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClicks"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/figtree_medium"
                android:gravity="center"
                android:text="Clicks"
                android:textColor="@color/txt_gray_color"
                android:textSize="12sp"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLinkName" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_blue_stroke"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/figtree_medium"
                    android:text="https://samplelink.oia.bio/ashd..."
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/id_copy" />


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>